    "scripts": {
        "build": "npm run build-ts && npm run lint",
        "build-ts": "tsc",
        "build-ts-watch": "tsc -w --preserveWatchOutput",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve": "node dist/**/server.js",
        "serve-debug-watch": "nodemon --inspect=0.0.0.0 dist/**/server.js",
        "watch-node": "nodemon --inspect=0.0.0.0 dist/**/server.js",
        "serve-debug-prod": "node --inspect=0.0.0.0:9091 dist/**/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
        "test-watch": "npm run test -- --watchAll",
        "watch": "npm run build-ts && concurrently -k -p [{name}] -n TypeScript,Node -c cyan.bold,green.bold  npm:build-ts-watch npm:serve-debug-watch"
    },
    "dependencies": {
        "@types/mustache": "^4.1.1",
        "axios": "^1.5.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-http-context": "^1.2.4",
        "express-validator": "^6.8.0",
        "express-xml-bodyparser": "^0.3.0",
        "form-data": "^4.0.0",
        "jsforce": "^1.10.1",
        "jsonwebtoken": "^9.0.2",
        "jszip": "^3.6.0",
        "morgan": "^1.10.0",
        "mustache": "^4.2.0",
        "node-xlsx": "^0.15.1",
        "pg": "^8.5.1",
        "puppeteer": "^19.11.1",
        "redis": "^3.1.2",
        "rsmq-worker": "^0.4.3",
        "typeorm": "^0.3.17",
        "uuid": "3.4",
        "winston": "^3.3.3",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/errorhandler": "^1.5.0",
        "@types/express-xml-bodyparser": "^0.3.2",
        "@types/jest": "^26.0.22",
        "@types/jsforce": "^1.9.26",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/morgan": "^1.9.2",
        "@types/node-xlsx": "^0.15.1",
        "@types/pg": "^7.14.7",
        "@types/redis": "^2.8.28",
        "@types/request": "^2.48.5",
        "@types/rsmq-worker": "^0.3.29",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.0",
        "@types/xml2js": "^0.4.8",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.3.0",
        "eslint-plugin-react": "^7.32.2",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-node": "^10.7.0",
        "typescript": "4.7"
    },
    "nodemonConfig": {
        "delay": 1500,
        "ext": "js,mjs,json,mustache",
        "watch": [
            "dist/",
            "templates/"
        ]
    }
}