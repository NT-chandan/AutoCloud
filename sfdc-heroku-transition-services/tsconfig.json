{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [ "es2019", "dom" ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src/web",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
    ],
    "files": [
        "src/types/custom.d.ts"
    ],
    "exclude": [
        "./test/",
        "./node_modules",
        "./dist/"
    ],
    "ts-node": {"files": true
    }
}
